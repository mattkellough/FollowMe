<div class="posts-wrapper">
  <div class="row">
    <div class="post">
      <div class="post-head">
        <div class="name">
          <%= @post.user.user_name %>
        </div>
      </div>
      <div class="image">
        <div class="center-block">
          <%= image_tag @post.image.url(:medium) %>
        </div>
      </div>
      <p class="caption">
        <%= @post.caption %>
      </p>
      <div class="text-center">
        <%= link_to "Cancel", posts_path %>
      </div>
    </div>
  </div>
  <div class="text-center">
    <div class="edit-links">
      <%= link_to "Cancel", posts_path %> |
      <%= link_to "Edit Post", edit_post_path(@post) %>
    </div>
  </div>
</div>
